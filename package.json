const express = require('express');
const fs = require('fs');
const app = express();
const PORT = process.env.PORT || 3000;

app.use(express.text({ type: '*/*' })); // Accept any content-type

app.all('/', (req, res) => {
  const data = req.body;
  console.log('Received:', data);

  // Save the data to a file
  fs.appendFileSync('data.txt', `${new Date().toISOString()} - ${data}\n\n`);
  
  res.send('Response received and saved.');
});

app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
});
